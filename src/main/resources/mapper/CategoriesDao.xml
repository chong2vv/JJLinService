<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.blog.admin.dao.CategoriesDao">

    <resultMap type="com.yd.blog.admin.model.entity.Categories" id="CategoriesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CategoriesMap">
        select
            id, title, remark, status, image_url, create_time, type
        from categories
        where id = #{id}
    </select>

    <select id="getCategoryCounts" resultMap="CategoriesMap">
        select
            c.id, c.title, remark, c.status, c.image_url, c.create_time, c.type, COUNT(b.id) AS blogCount
        from categories c
        left join blog b on c.id = b.categories_id
        <where>
            <if test="status == null">
                and c.status >= 0
            </if>
        </where>
        GROUP BY c.id;
    </select>


    <!--查询指定行数据-->
    <select id="queryPager" parameterType="com.yd.blog.admin.model.vo.CategoriesPagerRequestVO" resultMap="CategoriesMap">
        select
        id, title, remark, status, image_url, create_time, type
        from categories
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="status == null">
                and status >= 0
            </if>
        </where>
        limit #{offset}, #{count}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from categories
        <where>
            <if test="status != null">
                and status >= #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into categories(title, remark, status, image_url, create_time, type)
        values (#{title}, #{remark}, #{status}, #{imageUrl}, #{createTime}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update categories
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateStatus" parameterType="com.yd.blog.admin.model.entity.Categories">
        update categories
        <set>
            <if test="status != null">
                status = #{status}
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>


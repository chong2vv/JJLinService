<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ry.time.admin.dao.GoodsDao">

    <resultMap type="com.ry.time.admin.model.entity.Goods" id="GoodsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="excerpt" column="excerpt" jdbcType="VARCHAR"/>
        <result property="size" column="size" jdbcType="VARCHAR"/>
        <result property="material" column="material" jdbcType="VARCHAR"/>
        <result property="pack" column="pack" jdbcType="VARCHAR"/>
        <result property="qty" column="qty" jdbcType="VARCHAR"/>
        <result property="timer" column="timer" jdbcType="VARCHAR"/>
        <result property="coverImg" column="cover_img" jdbcType="VARCHAR"/>
        <result property="imgList" column="img_list" jdbcType="VARCHAR"/>
        <result property="videoList" column="video_list" jdbcType="VARCHAR"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="classifyId" column="classify_id" jdbcType="INTEGER"/>
        <result property="isHomeList" column="is_home_list" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsMap">
        select id,
               title,
               content,
               excerpt,
               size,
               material,
               pack,
               qty,
               timer,
               cover_img,
               img_list,
               video_list,
               tags,
               classify_id,
               is_home_list,
               status,
               create_time
        from goods
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryPager" parameterType="com.ry.time.admin.model.vo.GoodsPagerRequestVO" resultMap="GoodsMap">
        select
        id, title, content, excerpt, size, material, pack, qty, timer, cover_img, img_list, video_list, tags, classify_id,
        is_home_list, status, create_time
        from goods
        <where>
            <if test="searchString != null and searchString != ''">
                and (title like #{keyword} or content like #{keyword})
            </if>
            <if test="classifyId != null">
                and classify_id = #{classifyId}
            </if>
            <if test="isHomeList != null">
                and is_home_list = #{isHomeList}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="status == null">
                and status >= 0
            </if>
        </where>
        order by create_time desc
        limit #{offset}, #{count}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from goods
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into goods(id, title, content, excerpt, size, material, pack, qty, timer, cover_img, img_list, video_list, tags,
                          classify_id, is_home_list, status, create_time)
        values (#{id}, #{title}, #{content}, #{excerpt}, #{size}, #{material}, #{pack}, #{qty}, #{timer}, #{coverImg},
                #{imgList}, #{videoList}, #{tags}, #{classifyId}, #{isHomeList}, #{status}, #{createTime})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into goods(id, title, content, excerpt, size, material, pack, qty, timer, cover_img, img_list, video_list, tags,
        classify_id, is_home_list, status, create_time)
        values
        <foreach collection="goodsList" item="goods" separator=",">
            (#{goods.id},#{goods.title}, #{goods.content}, #{goods.excerpt}, #{goods.size}, #{goods.material},
            #{goods.pack}, #{goods.qty}, #{goods.timer}, #{goods.coverImg}, #{goods.imgList}, #{goods.videoList},
            #{goods.tags},
            #{goods.classifyId}, #{goods.isHomeList}, #{goods.status}, #{goods.createTime})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update goods
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="excerpt != null and excerpt != ''">
                excerpt = #{excerpt},
            </if>
            <if test="size != null and size != ''">
                size = #{size},
            </if>
            <if test="material != null and material != ''">
                material = #{material},
            </if>
            <if test="pack != null and pack != ''">
                pack = #{pack},
            </if>
            <if test="qty != null and qty != ''">
                qty = #{qty},
            </if>
            <if test="timer != null and timer != ''">
                timer = #{timer},
            </if>
            <if test="coverImg != null and coverImg != ''">
                cover_img = #{coverImg},
            </if>
            <if test="imgList != null and imgList != ''">
                img_list = #{imgList},
            </if>
            <if test="videoList != null and videoList != ''">
                video_list = #{videoList},
            </if>
            <if test="tags != null and tags != ''">
                tags = #{tags},
            </if>
            <if test="classifyId != null">
                classify_id = #{classifyId},
            </if>
            <if test="isHomeList != null">
                is_home_list = #{isHomeList}
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateStatus">
        update goods
        <set>
            <if test="status != null">
                status = #{status}
            </if>
        </set>
        where id = #{id}
    </update>


</mapper>


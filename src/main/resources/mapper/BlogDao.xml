<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.kuma.admin.dao.BlogDao">

    <resultMap type="com.yd.kuma.admin.model.entity.Blog" id="BlogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="view" column="view" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="excerpt" column="excerpt" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="imgList" column="img_list" jdbcType="VARCHAR"/>
        <result property="videoList" column="video_list" jdbcType="VARCHAR"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="classifyId" column="classify_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogMap">
        select
          id, img, author, view, title, excerpt, content, img_list, video_list, tags, status, classify_id, create_time
        from blog
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryPager" resultMap="BlogMap">
        select
          id, img, author, view, title, excerpt, content, tags, status, img_list, video_list, classify_id, create_time
        from blog
        <where>
            <if test="search_str != null and search_str != ''">
                and title LIKE CONCAT('%',#{search_str},'%')
            </if>
            <if test="classifyId != null">
                and classify_id = #{classifyId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="status == null">
                and status >= 0
            </if>
        </where>
        order by create_time desc
        limit #{offset}, #{count}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from blog
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog(id, img, author, view, title, excerpt, content, tags, status, img_list, video_list, classify_id, create_time)
        values (#{id}, #{img}, #{author}, #{view}, #{title}, #{excerpt}, #{content}, #{tags}, #{status}, #{imgList}, #{videoList}, #{classifyId}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog
        <set>
            img = #{img},
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="excerpt != null and excerpt != ''">
                excerpt = #{excerpt},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            content = #{content},
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="tags != null and tags != ''">
                excerpt = #{tags},
            </if>
            img_list = #{imgList},
            video_list = #{videoList},
            <if test="classifyId != null">
                classify_id = #{classifyId},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateStatus" parameterType="com.yd.kuma.admin.model.entity.Blog">
        update blog
        <set>
            status = #{status},
        </set>
        where id = #{id}
    </update>

</mapper>


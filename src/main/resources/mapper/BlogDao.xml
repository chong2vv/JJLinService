<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ry.time.admin.dao.BlogDao">

    <resultMap type="com.ry.time.admin.model.entity.Blog" id="BlogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="view" column="view" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="excerpt" column="excerpt" jdbcType="VARCHAR"/>
        <result property="body" column="body" jdbcType="VARCHAR"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogMap">
        select
          id, img, author, view, title, excerpt, body, tags, status, create_time
        from blog
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryPager" resultMap="BlogMap">
        select
          id, img, author, view, title, excerpt, body, tags, status, create_time
        from blog
        <where>
            <if test="search_str != null and search_str != ''">
                and title LIKE CONCAT('%',#{search_str},'%')
                or content LIKE CONCAT('%',#{search_str},'%')
            </if>
        </where>
        limit #{offset}, #{count}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from blog
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog(id, img, author, view, title, excerpt, body, tags, status, create_time)
        values (#{id}, #{img}, #{author}, #{view}, #{title}, #{excerpt}, #{body},  #{tags}, #{status}, #{createTime})
    </insert>

</mapper>


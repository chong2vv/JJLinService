<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.blog.admin.dao.TagDao">

    <resultMap type="com.yd.blog.admin.model.entity.Tag" id="TagMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TagMap">
        select
          id, title, status, create_time
        from tag
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByTitle" resultMap="TagMap">
        select
            id, title, status, create_time
        from tag
        where title = #{title}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TagMap">
        select
          id, title, status, create_time
        from tag
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="status == null">
                and status >= 0
            </if>
        </where>
        limit #{offset}, #{count}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from tag
        <where>
            <if test="status != null">
                and status >= #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tag(title, status, create_time)
        values (#{title}, #{status}, #{createTime})
    </insert>


    <!--通过主键修改数据-->
    <update id="update">
        update tag
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>


</mapper>

